alias gc='git commit'
alias gp='git push'
alias gd='git diff'
alias gb='git blame'

alias sb='soft browse'

alias lg='lazygit'

alias man='tldr'

alias nvimupdate='nv -c "lua vim.pack.update()" -c "w" -c "qall"'

PS1='\w > '

export PATH=$HOME/Documents/PlaydateSDK-3.0.2:$HOME/Applications:$HOME/.scripts:$HOME/.cargo/bin:$HOME/.local/share/gem/ruby/3.4.0/bin:$HOME/.local/bin:$PATH
export BAT_THEME="Catppuccin Mocha"
export EDITOR="/usr/bin/nvim"
export PLAYDATE_SDK_PATH=/home/distrorockhopper/Documents/PlaydateSDK-3.0.2

eval "$(starship init zsh)"

eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
